<div class="container">
  <div class="p-2">
    <h1>Details Import</h1>
  </div>
  <div class="shadow-lg p-3 mb-5 bg-body rounded">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Phone</th>
          <th>Last Name</th>
          <th>Error Message</th>
          <td></td>
        </tr>
      </thead>
      <tbody>
        <% @import_lines.each do |import| %>
          <tr>
            <td><%= import.first_name %></td>
            <td><%= import.email %></td>
            <td><%= import.phone %></td>
            <td><%= import.last_name %></td>
            <td><%= import.error_message %></td>
            <% if import.error_message.present? %>
            <td>
              <%= link_to edit_import_line_path(import) do %>
              <i class="far fa-edit"></i>
              <% end %>
            </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
